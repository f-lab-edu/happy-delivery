<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.happy.delivery.infra.mybatis.restaurant.MenuMapper">

  <resultMap id="menuGroupMap" type="com.happy.delivery.domain.restaurant.MenuGroup">
    <result column="menu_group_id" property="id"/>
  </resultMap>

  <select id="findAllByRestaurantId" resultType="com.happy.delivery.domain.restaurant.MenuGroup">
    SELECT menu_group_id, name
    FROM menu_groups
    WHERE restaurant_id = ${restaurantId}
  </select>
</mapper>