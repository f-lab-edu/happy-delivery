<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.happy.delivery.infra.mybatis.UserAddressMapper">

  <insert id="insert" parameterType="com.happy.delivery.domain.user.UserAddress">
    INSERT INTO user_addresses (userId, addressCode, addressDetail)
    VALUES (#{userId}, #{addressCode}, #{addressDetail})
  </insert>

  <update id="update" parameterType="com.happy.delivery.domain.user.UserAddress">
    UPDATE user_addresses
    SET addressCode   = #{addressCode},
        addressDetail = #{addressDetail}
    WHERE id = #{id};
  </update>

  <select id="findById" parameterType="Long"
    resultType="com.happy.delivery.domain.user.UserAddress">
    SELECT *
    FROM user_addresses
    WHERE id = #{id}
  </select>

  <select id="findAllByUserId" resultType="com.happy.delivery.domain.user.UserAddress">
    SELECT *
    FROM user_addresses
    WHERE userId = #{userId}
  </select>

  <delete id="deleteById" parameterType="Long">
    DELETE
    FROM user_addresses
    WHERE id = #{id}
  </delete>

</mapper>