<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.happy.delivery.infra.mybatis.RestaurantSearchMapper">
  <select id="getAllCategories" resultType="com.happy.delivery.domain.restaurant.RestaurantCategory">
    SELECT id, name
    FROM restaurant_categories
  </select>

  <select id="getAllRestaurantsByCategory" resultType="com.happy.delivery.domain.restaurant.Restaurant">
    SELECT id, name, category, addressCode
    FROM restaurants
    WHERE category = #{category}
  </select>
</mapper>